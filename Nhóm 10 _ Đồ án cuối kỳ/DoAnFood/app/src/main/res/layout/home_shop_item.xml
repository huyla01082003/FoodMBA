<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
    
    <ImageView
        android:layout_marginTop="4dp"
        android:id="@+id/home_item_image"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:src="@drawable/home_item_image"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_item_name"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Jolibee Nguyễn Duy Trinh"
            android:textColor="@color/red"
            android:fontFamily="@font/inter_semibold"/>
        
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_star_24"/>

            <TextView
                android:id="@+id/home_item_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7"
                android:fontFamily="@font/inter_medium"
                android:textColor="#8D8D8D"/>
        </LinearLayout>

        <TextView
            android:textSize="12dp"
            android:id="@+id/home_item_address"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="503A Đ. Nguyễn Duy Trinh, Phường Bình Trưng Tây, Quận 2, Thành phố Hồ Chí Minh, Việt Nam"
            />
    </LinearLayout>
</LinearLayout>