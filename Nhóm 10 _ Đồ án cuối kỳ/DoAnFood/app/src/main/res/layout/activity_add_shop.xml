<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisActivity"
    android:id="@+id/add_shop_layout">

    <RelativeLayout
        android:paddingLeft="27dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#17171B"
        >
        <ImageButton
            android:id="@id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_arrow_back_ios_new_24"
            android:layout_marginTop="24dp" />

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/restaurant" />

        <TextView
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_bold"
            android:id="@+id/textdangnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Đăng Ký"
            android:textColor="#FFD966"
            android:textSize="24dp" />


    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="27dp"
        android:paddingRight="27dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColor="@color/black"
            android:paddingLeft="18dp"
            android:id="@+id/txt_shop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:hint="Tên cửa hàng"
            android:textColorHint="@color/grey"
            android:inputType="text"
            android:radius="8dp"
            android:background="@drawable/rounded_edittext_background"
            />

        <EditText
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:paddingLeft="18dp"
            android:id="@+id/txt_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Địa chỉ"
            android:textColorHint="@color/grey"
            android:radius="10dp"
            android:background="@drawable/rounded_edittext_background"/>
        <EditText
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:paddingLeft="18dp"
            android:id="@+id/txt_contact"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="SĐT"
            android:textColorHint="@color/grey"
            android:radius="10dp"
            android:background="@drawable/rounded_edittext_background"/>

        <EditText
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:paddingLeft="18dp"
            android:id="@+id/txt_open"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Giờ mở cửa"
            android:textColorHint="@color/grey"
            android:radius="10dp"
            android:background="@drawable/rounded_edittext_background"/>
        <EditText
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:paddingLeft="18dp"
            android:id="@+id/txt_close"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Giờ đóng cửa"
            android:textColorHint="@color/grey"
            android:radius="10dp"
            android:background="@drawable/rounded_edittext_background"/>
        <TextView
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại cửa hàng"/>
        <Spinner
            android:spinnerMode="dropdown"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:paddingLeft="18dp"
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Loại cửa hàng"
            android:textColorHint="@color/grey"
            android:inputType="textPassword"
            android:radius="10dp"
            android:background="@drawable/rounded_edittext_background"/>



        <Button
            android:fontFamily="@font/inter_bold"
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:text="Đăng Ký"
            android:textColor="#FFF"
            android:backgroundTint="#2DA86D"
            android:textSize="16dp"
            />

    </LinearLayout>




</androidx.appcompat.widget.LinearLayoutCompat>